@* ﻿@model List<TRIPLOGS.Models.TripLog> *@

@{
    ViewBag.Title = "Trip Logs";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trip Logs</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/triplogs.css")">
</head>
<body>

    <div class="container mt-4">
        <h1>Trip Logs</h1>

        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTripLogModal">
            Add New Trip Log
        </button>

        <div class="table-container">
            <table class="table" id="tripLogTable">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Driver</th>
                        <th>Helper</th>
                        <th>Broker/Client</th>
                        <th>Consignee</th>
                        <th>Destination</th>
                        <th>Container No</th>
                        <th>Container Size</th>
                        <th>Shipping Line</th>
                        <th>BL Ref No</th>
                        <th>Status</th>
                        <th>Dispatcher</th>
                        <th>Cash Advance</th>
                        <th>Additional Cash Advance</th>
                        <th>Diesel</th>
                        <th>Total Amount</th>
                        <th>FCL</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

        <nav>
            <ul class="pagination justify-content-center mt-3"></ul>
        </nav>
    </div>


    <div class="modal fade" id="addTripLogModal" tabindex="-1" aria-labelledby="addTripLogLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTripLogLabel">Add New Trip Log</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="tripLogForm">
                        <div class="mb-3">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" id="Date" name="Date" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Driver</label>
                            <input type="text" class="form-control" id="Driver" name="Driver" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Helper</label>
                            <input type="text" class="form-control" id="Helper" name="Helper">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Broker/Client</label>
                            <input type="text" class="form-control" id="BrokerClient" name="BrokerClient">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Consignee</label>
                            <input type="text" class="form-control" id="Consignee" name="Consignee">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Destination</label>
                            <input type="text" class="form-control" id="Destination" name="Destination">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Container No</label>
                            <input type="text" class="form-control" id="ContainerNo" name="ContainerNo">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Container Size</label>
                            <input type="text" class="form-control" id="ContainerSize" name="ContainerSize">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Shipping Line</label>
                            <input type="text" class="form-control" id="ShippingLine" name="ShippingLine">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">BL Ref No</label>
                            <input type="text" class="form-control" id="BLRefNo">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <input type="text" class="form-control" id="Status">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Dispatcher</label>
                            <input type="text" class="form-control" id="Dispatcher">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Cash Advance</label>
                            <input type="number" class="form-control" id="CashAdvance">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Additional Cash Advance</label>
                            <input type="number" class="form-control" id="AdditionalCashAdvance">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Diesel (Shell/Petron/Cash)</label>
                            <input type="text" class="form-control" id="Diesel">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Total Amount</label>
                            <input type="number" class="form-control" id="TotalAmount">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">FCL</label>
                            <input type="text" class="form-control" id="FCL">
                        </div>
                        <button type="button" class="btn btn-success" id="saveTripLog">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/js/triplogs.js")"></script>

</body>
</html>