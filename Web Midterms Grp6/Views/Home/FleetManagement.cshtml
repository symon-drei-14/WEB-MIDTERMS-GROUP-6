<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/fleetmanagement.css" rel="stylesheet" type="text/css" />
    <script src="/js/fleetmanagement.js" defer></script>
    <title>Fleet Management Dashboard</title>
    <style>


    </style>
</head>
<body>

    

    <section class="dashboard">
        <button id="trip-assign-button"><a href="#" style="color: white; text-decoration: none;">Assign Trip</a></button>
        <h1>Fleet Management Dashboard</h1>
        <div class="overview">
            <p>Total Vehicles: 15</p>
            <p>Active Trips: <span id="active-trips-count">0</span></p>
            <p>Damaged Vehicles: <span id="damaged-vehicles-count">3</span></p>
        </div>
    </section>

    <section id="assigned-trips">
        <h2>Assigned Trips</h2>
        <table>
            <thead>
                <tr>
                    <th>Vehicle</th>
                    <th>Driver</th>
                    <th>Driver Assistant</th>
                    <th>Client</th>
                    <th>Container No.</th>
                    <th>Destination</th>
                    <th>Departure Time</th>
                    <th>Estimated Arrival Time</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Vehicle 1</td>
                    <td>Driver 1</td>
                    <td>Driver Assistant 1</td>
                    <td>Toyota</td>
                    <td>23193081</td>
                    <td>Destination A</td>
                    <td>March 19, 2025 10:00 AM</td>
                    <td>March 19, 2025 4:00 PM</td>
                    <td>In Progress</td>
                </tr>
                <tr>
                    <td>Vehicle 2</td>
                    <td>Driver 2</td>
                    <td>Driver Assistant 2</td>
                    <td>Mastabushi</td>
                    <td>23193081</td>
                    <td>Destination B</td>
                    <td>March 20, 2025 9:00 AM</td>
                    <td>March 20, 2025 3:00 PM</td>
                    <td>Assigned</td>
                </tr>
            </tbody>
        </table>
    </section>

    <section id="view-vehicles">
        <h2>Vehicle Status</h2>
        <table>
            <thead>
                <tr>
                    <th>Vehicle</th>
                    <th>Status</th>
                    <th>Last Trip</th>
                    <th>Location</th>
                    <th>Maintenance</th>
                    <th>Report Damage</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Vehicle 1</td>
                    <td>In-Use</td>
                    <td>March 19, 2025</td>
                    <td>Location A</td>
                    <td>Completed</td>
                    <td><button class="damage-report-button" data-vehicle="Vehicle 1">Report Damage</button></td>
                </tr>
                <tr>
                    <td>Vehicle 2</td>
                    <td>Available</td>
                    <td>None</td>
                    <td>Location B</td>
                    <td>Completed</td>
                    <td><button class="damage-report-button" data-vehicle="Vehicle 2">Report Damage</button></td>
                </tr>
            </tbody>
        </table>
    </section>

    <!-- Dassign Trip Modal -->
    <div id="assign-trip-modal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>Assign Trip</h2>
            <form action="/assign-trip" method="post">
                <label for="vehicle">Select Vehicle:</label>
                <select id="vehicle" name="vehicle">
                    <option value="vehicle1">Vehicle 1</option>
                    <option value="vehicle2">Vehicle 2</option>
                </select>

                <label for="driver">Select Driver:</label>
                <select id="driver" name="driver">
                    <option value="driver1">Driver 1</option>
                    <option value="driver2">Driver 2</option>
                </select>

                <label for="assistant">Select Assistant:</label>
                <select id="assistant" name="assistant">
                    <option value="Assistant1">Assistant 1</option>
                    <option value="Assistant2">Assistant 2</option>
                </select>

                <label for="client">Client:</label>
                <input type="text" id="client" name="client" required>

                <label for="container">Container No.:</label>
                <input type="text" id="container" name="container" required>

                <label for="destination">Destination:</label>
                <input type="text" id="destination" name="destination" required>

                <label for="departure-time">Departure Date and Time:</label>
                <input type="datetime-local" id="departure-time" name="departure-time" required>

                <label for="arrival-time">Estimated Arrival Date and Time:</label>
                <input type="datetime-local" id="arrival-time" name="arrival-time" required>

                <button type="submit">Assign Trip</button>
            </form>
        </div>
    </div>

    <!-- Dis Is The Damage Report -->
    <div id="damage-modal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>Report Damage for <span id="vehicle-name"></span></h2>
            <form id="damage-form">
                <label for="damage-type">Type of Damage:</label>
                <select id="damage-type" name="damage-type">
                    <option value="engine">Engine</option>
                    <option value="tires">Tires</option>
                    <option value="body">Body</option>
                </select>

                <label for="damage-description">Description:</label>
                <textarea id="damage-description" name="damage-description" required></textarea>

                <label for="damage-photo">Upload Photo:</label>
                <input type="file" id="damage-photo" name="damage-photo">

                <label for="driver_damage">Driver in Charge:</label>
                <select id="driver" name="driver">
                    <option value="driver1">Driver 1</option>
                    <option value="driver2">Driver 2</option>
                </select>

                <button type="submit">Submit Damage Report</button>
            </form>
        </div>
    </div>



</body>
</html>