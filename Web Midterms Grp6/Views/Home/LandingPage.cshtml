@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logistics Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="/css/landingpage.css" rel="stylesheet" type="text/css" />
    <link href="/css/nav.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Midterms_Grp6.styles.css" asp-append-version="true" />
    <script src="/js/landingpage.js" defer></script>
    
</head>
<body>

    <header class="header">
        <div class="logo-container">
            <img src="/img/logo.png" alt="Company Logo" class="logo">
            <img src="/img/mansar.png" alt="Company Name" class="company">
        </div>

        <div class="search-container">
            <input type="text" placeholder="Search..." class="search-bar">
        </div>

        <div class="profile">
            <i class="icon">✉</i>
            <img src="/img/profile.png" alt="Admin Profile" class="profile-icon">
            <div class="profile-name">Jesus Christ</div>
        </div>
    </header>


    <div class="sidebar">

        <div class="sidebar-item">
            <i class="icon">♛</i>
            <a asp-area="" asp-controller="Home" asp-action="LandingPage">Home</a>
        </div>
        <div class="sidebar-item">
            <i class="icon">☀</i>
            <span class="text">Driver Management</span>
        </div>
        <div class="sidebar-item">
            <i class="icon">✈</i>
            <a asp-area="" asp-controller="Home" asp-action="FleetManagement">Fleet Management</a>
        </div>
        <div class="sidebar-item">
            <i class="icon">☄</i>
            <a asp-area="" asp-controller="Home" asp-action="TripLogs">Trip Logs</a>
        </div>
        <div class="sidebar-item">
            <i class="icon">♨</i>
            <span class="text">Tracking</span>
        </div>
        <div class="sidebar-item">
            <i class="icon">⌦</i>
            <a asp-area="" asp-controller="Home" asp-action="PreventiveMaintenance" class="text">Maintenance Scheduling</a>
        </div>
        <div class="sidebar-item">
            <i class="icon"> ⤯ </i>
            <span class="text">Fleet Performance Analytics</span>
        </div>
        <hr>
        <div class="sidebar-item">
            <i class="icon"> ☯ </i>
            <span class="text">Settings</span>
        </div>
        <div class="sidebar-item">
            <i class="icon"> ☢ </i>
            <span class="text">Logout</span>
        </div>
    </div>


    <div class="main-content2">

       

        <section class="weekly-trip-schedule">
            <h3>Weekly Schedule</h3>
            <div class="week-schedule">
                <div class="day">
                    <h4>Monday</h4>
                    <ul>
                        <li>Trip 1: 10:00 AM - Delivery sa bahay ni kuya</li>
                        <li>Trip 2: 02:00 PM - Delivery sa toro house</li>
                    </ul>
                </div>
                <div class="day">
                    <h4>Tuesday</h4>
                    <ul>
                        <li>Trip 1: 09:00 AM - Delivery fee</li>
                        <li>Trip 2: 01:00 PM - Delivery sa fine dining restaurant</li>
                    </ul>
                </div>
                <div class="day">
                    <h4>Wednesday</h4>
                    <ul>
                        <li>Trip 1: 11:00 AM - Where to the house</li>
                    </ul>
                </div>
                <div class="day">
                    <h4>Thursday</h4>
                    <ul>
                        <li>Trip 1: 12:00 PM - Birthday ni Gemma</li>
                    </ul>
                </div>
                <div class="day">
                    <h4>Friday</h4>
                    <ul>
                        <li>Trip 1: 08:00 AM - Tripping langs</li>
                        <li>Trip 2: 04:00 AM - Night Rides</li>
                    </ul>
                </div>
                <div class="day">
                    <h4>Saturday</h4>
                    <ul>
                        <li>Trip 1: 10:00 AM - Trip to busan</li>
                    </ul>
                </div>
                <div class="day">
                    <h4>Sunday</h4>
                    <ul>
                        <li>Trip 1: 09:00 AM - Betty Go Belmonte</li>
                    </ul>
                </div>
                <button>View More </button>
            </div>
        </section>

        <section class="analytics">
            <h3>Monthly Deliveries Analytics</h3>
            <div class="chart">
                <canvas id="deliveryChart"></canvas>
            </div>
            <button>View More </button>

        </section>


        <section class="summary">
            <div class="summary-card">
                <h3>Keneme Keneme</h3>
                <p>Ewan huhu</p>
                <p>Ewan huhuhuhu</p>
                <p>Ewan huhuhuhu</p>
                <p>Ewan huhuhuhu</p>
                <button>View More </button>
            </div>

            <div class="summary-card">
                <h3>Truck Status</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Truck ID</th>
                            <th>Status</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>001</td>
                            <td>Active</td>
                            <td>Warehouse</td>
                        </tr>
                        <tr>
                            <td>002</td>
                            <td>In Maintenance</td>
                            <td>Depot</td>
                        </tr>
                        <tr>
                            <td>003</td>
                            <td>Available</td>
                            <td>Garage</td>
                        </tr>
                        <tr>
                            <td>004</td>
                            <td>Active</td>
                            <td>On Route</td>
                        </tr>
                    </tbody>
                </table>
                <button>View More </button>
            </div>

            <div class="summary-card">
                <div class="driver-status">
                    <div class="driver">
                        <i class="driver-icon fas fa-user"></i>
                        <span class="driver-name">John Doe - Driving</span>
                    </div>
                    <div class="driver">
                        <i class="driver-icon fas fa-user-slash"></i>
                        <span class="driver-name">Jane Smith - On Leave</span>
                    </div>
                    <div class="driver">
                        <i class="driver-icon fas fa-user"></i>
                        <span class="driver-name">Tom Johnson - Driving</span>
                    </div>
                    <div class="driver">
                        <i class="driver-icon fas fa-user-check"></i>
                        <span class="driver-name">Emily Davis - Available</span>
                    </div>
                </div>
                <button>View More </button>
            </div>
        </section>

        <section class="maintenance">
            <h3>Trucks Needing Maintenance</h3>
            <table>
                <thead>
                    <tr>
                        <th>Truck ID</th>
                        <th>Status</th>
                        <th>Location</th>
                        <th>Maintenance Due Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>002</td>
                        <td>In Maintenance</td>
                        <td>Depot</td>
                        <td>2023-10-15</td>
                    </tr>
                    <tr>
                        <td>007</td>
                        <td>Needs Maintenance</td>
                        <td>Garage</td>
                        <td>2023-10-20</td>
                    </tr>
                    <tr>
                        <td>005</td>
                        <td>In Maintenance</td>
                        <td>Warehouse</td>
                        <td>2023-10-22</td>
                    </tr>
                    <tr>
                        <td>008</td>
                        <td>Needs Maintenance</td>
                        <td>Depot</td>
                        <td>2023-10-25</td>
                    </tr>
                </tbody>
            </table>
            <button>View More </button>
        </section>
  </div>


</body>
</html>
