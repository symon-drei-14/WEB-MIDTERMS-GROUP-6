        <section class="analytics">
            <h3>Monthly Deliveries Analytics</h3>
            <div class="chart">
                <canvas id="deliveryChart"></canvas>
            </div>
            <button>View More </button>

        </section>


        <section class="summary">
            <div class="summary-card">
                <h3>Keneme Keneme</h3>
                <p>Ewan huhu</p>
                <p>Ewan huhuhuhu</p>
                <p>Ewan huhuhuhu</p>
                <p>Ewan huhuhuhu</p>
